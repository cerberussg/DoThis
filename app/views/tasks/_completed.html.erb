<% if task.completed? %>
  <div class="row task">
    <div class="col-md-2">
      <p><%= link_to complete_task_path(task), method: :patch do %></p>
        <i class="fa fa-check fa-lg"></i>
      <% end %>
    </div>

    <div class="col-md-2">
      <p><%= link_to task, method: :delete, data: { confirm: "Are you sure?" } do %></p>
        <i class="fa fa-trash fa-lg"></i>
      <% end %>
    </div>

    <div class="col-md-8">
      <h2 style="opacity: 0.5;" class="task-title"><strike><%= link_to task.title, task %></strike></h2>
      <p style="opacity: 0.5;" class="task-sub-title task-desc"><%= simple_format(task.description) %></p>
      <p style="opacity: 0.5;" class="time-created-at task-sub-title">Completed <%= time_ago_in_words(task.completed_at) %> ago</p>
    </div>
  </div>
<% else %>
  <div class="row task">
    <div class="col-md-1">
      <p><%= link_to complete_task_path(task), method: :patch do %></p>
        <i class="fa fa-check fa-lg"></i>
      <% end %>
    </div>

    <div class="col-md-1">
      <p><a href="#" class="flag", data-toggle="tooltip" data-placement="top" title="Flag Important"></p><i class="fa fa-flag fa-lg fa-flip-horizontal"></i></a>
    </div>

    <div class="col-md-9">
      <h2 class="task-title"><%= link_to task.title, task %></h2>
      <p class="task-sub-title task-desc"><%= simple_format(task.description) %></p>
      <p style="opacity: 0.5;" class="time-created-at task-sub-title">Created <%= time_ago_in_words(task.created_at) %> ago</p>
    </div>

    <div class="col-md-1">
      <p><%= link_to task, method: :delete, data: { confirm: "Are you sure?" } do %></p>
        <i class="fa fa-trash fa-lg"></i>
      <% end %>
    </div>
  </div>
<% end %>
