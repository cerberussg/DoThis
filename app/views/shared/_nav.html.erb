<navbar class="navbar navbar-expand navbar-default">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "Do Th!s", root_path, class: "navbar-brand" %>
    </div>
    <% if user_signed_in? %>
      <%= link_to "Create Task", new_task_path, class: "navbar-text navbar-link" %>
    <% end %>

    <ul class="nav navbar-nav ml-auto">
      <% if current_user.present? %>
        <li class="nav-item dropdown dropright">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="text-sm"><i class="fa fa-user-circle fa-lg"></i><%= current_user.email %></span>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to "Edit Profile", edit_user_registration_path, method: :delete, class: "nav-link dropdown-item" %>
            <a class="dropdown-item" href="#">Reset Password</a>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item"><%= link_to "Login", new_user_session_path, class: "navbar-link" %></li> &nbsp | &nbsp
        <li><%= link_to "Register", new_user_registration_path, class: "navbar-link" %></li>
      <% end %>
    </ul>
  </div>
</navbar>
